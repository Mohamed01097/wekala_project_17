<odoo>
    <data>
        <record id="view_sale_order_loyalty_form" model="ir.ui.view">
            <field name="name">Loyalty</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <field name="outgoing"/>
                    <field name="commission_value"/>
                    <field name="commission_result" />
                </xpath>
            </field>
        </record>
        <record id="view_move_form_inherit_commission" model="ir.ui.view">
            <field name="name">account.move.form.inherit.commission</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']"
                       position="before">
                    <field name="outgoing"/>
                    <field name="commission_value"/>
                    <field name="commission_result"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>